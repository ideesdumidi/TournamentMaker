<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=RobotoDraft:400,500,700,400italic">
    <base href="@Url.Content("~/")"/>

    <title>Tournament Maker</title>

    @Styles.Render("~/content/css/styles")

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body ng-app="app" ng-controller="layoutController">
    <div class="container">
        <div class="navbar navbar-transparent" style="position:absolute" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#/home">Tournament Maker</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-center">
                        <li ng-class="{active:currentPage()=='home'||dropdown.home}" class="dropdown" is-open="dropdown.home" ng-mouseover="dropdown.home = true" ng-mouseout="dropdown.home = false">
                            <a href="#/home" role="button">Accueil</a>
                            <ul class="dropdown-menu" role="menu">
                                <li ng-repeat="sport in sports"><a ng-href="{{'#/home/'+sport.key}}" ng-bind="sport.name"></a></li>
                            </ul>
                        </li>
                        <li ng-class="{active:currentPage()=='create'||dropdown.create}" class="dropdown" is-open="dropdown.create" ng-mouseover="dropdown.create = true" ng-mouseout="dropdown.create = false">
                            <a href="" role="button">Créer <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#/match">Match</a></li>
                                <li><a href="#/tournament">Tournoi</a></li>
                            </ul>
                        </li>
                        <li ng-class="{active:currentPage()=='participate'||dropdown.participate}" class="dropdown" is-open="dropdown.participate" ng-mouseover="dropdown.participate = true" ng-mouseout="dropdown.participate = false">
                            <a href="" role="button">Participer <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="">Match</a></li>
                                <li><a href="">Tournoi</a></li>
                            </ul>
                        </li>
                        <li ng-class="{active:currentPage()=='classement'||dropdown.ranks}" class="dropdown" is-open="dropdown.ranks" ng-mouseover="dropdown.ranks = true" ng-mouseout="dropdown.ranks = false">
                            <a href="#/classement" role="button">Classements</a>
                            <ul class="dropdown-menu" role="menu">
                                <li ng-repeat="sport in sports"><a ng-href="{{'#/classement/'+sport.key}}" ng-bind="sport.name"></a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right hidden-xs" ng-if="identity.matricule">
                        <li ng-class="{active:dropdown.identity}" class="dropdown" is-open="dropdown.identity" ng-mouseover="dropdown.identity = true" ng-mouseout="dropdown.identity = false">
                            <a href="" role="button" style="padding:8px;">

                                <div style="width: 32px;height:32px;overflow: hidden;margin-right:2px" class="img-circle pull-left" ng-if="identity.picture">
                                    <img ng-src="{{identity.picture}}" style="margin: -6px 0px" width="32" />
                                </div>
                                <span ng-bind="identity.firstname + ' ' + identity.lastname" style="line-height:34px"></span> <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu pull-right" role="menu">
                                <li role="presentation" class="dropdown-header text-right">Sport par défaut</li>
                                <li ng-repeat="sport in sports"><a href="#" ng-click="selectSport(sport)" class="text-right"><span ng-bind="sport.name"></span> <span ng-show="sport.id == activeSport" class="glyphicon glyphicon-ok"></span></a></li>
                            </ul>
                        </li>
                    </ul>
                </div><!--/.navbar-collapse -->
            </div>
        </div>
    </div>
    @RenderBody()


    <div class="container">
        <hr>

        <footer>
            <p>© Company 2014</p>
        </footer>
     </div>
        @Scripts.Render("~/bundles/libs")
        @Scripts.Render("~/bundles/app")
        @RenderSection("scripts", required: false)

</body>
</html>